<%- model_class = PlatformCampaign -%>
<div class="page-header">
  <h1><%=t '.title', :default => PlatformCampaign %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @platform_campaign.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:contract_num) %></dt>
      <dd><pre class="prettyprint"><%= @platform_campaign.contract_num %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              platform_campaigns_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_platform_campaign_path(@platform_campaign), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              platform_campaign_path(@platform_campaign),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

