<h1>Listing platform_campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contract num</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platform_campaigns.each do |platform_campaign| %>
      <tr>
        <td><%= platform_campaign.name %></td>
        <td><%= platform_campaign.contract_num %></td>
        <td><%= platform_campaign.brand %></td>
        <td><%= link_to 'Show', platform_campaign %></td>
        <td><%= link_to 'Edit', edit_platform_campaign_path(platform_campaign) %></td>
        <td><%= link_to 'Destroy', platform_campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Platform campaign', new_platform_campaign_path %>
